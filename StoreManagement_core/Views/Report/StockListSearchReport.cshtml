@model IEnumerable<StoreManagement_core.ViewModels.ProductStockViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Stock List Report by Search</h1>


@using (Html.BeginForm())
{
    <p>
        Search by Name: @Html.TextBox("SearchBy")
   
        <input type="submit" value="Search" />
    </p>
}

@using (Html.BeginForm())
{
    <p>
        Select by Available:
        <select name="SearchBy">
            @foreach (var item in ViewData["ProductNames"] as List<String>)
            {
                <option value=@item>@item</option>
            }
        </select>
    
        <input type="submit" value="Show" />
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProdName)
            </th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProdName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
        }
    </tbody>
</table>
