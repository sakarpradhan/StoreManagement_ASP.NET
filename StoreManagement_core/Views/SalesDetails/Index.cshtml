@model IEnumerable<StoreManagement_core.Models.SalesDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Sales Details</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sale.BillNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prod.ProdName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalesDetailId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SalesDetailId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SalesDetailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
